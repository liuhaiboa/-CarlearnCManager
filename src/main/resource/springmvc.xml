            <!--登录验证拦截器-->
            <!--<mvc:mapping path="/**"/>-->
            <!--<bean class="com.haibo.Interceptor.LoginInterceptor"></bean>-->
        <!--</mvc:interceptor>-->
    <!--</mvc:interceptors>-->


</beans>